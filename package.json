{
  "name": "digital-house-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for Digital House - Decentralized Booking Platform with Auction System",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "clean": "hardhat clean",
    "deploy:local": "hardhat ignition deploy ignition/modules/DeployAll.ts --network localhost",
    "deploy:sepolia": "hardhat ignition deploy ignition/modules/DeployAll.ts --network sepolia",
    "deploy:arbitrum": "hardhat ignition deploy ignition/modules/DeployAll.ts --network arbitrumSepolia",
    "deploy:base": "hardhat ignition deploy ignition/modules/DeployAll.ts --network baseSepolia",
    "verify:sepolia": "hardhat run scripts/verify.ts --network sepolia",
    "verify:arbitrum": "hardhat run scripts/verify.ts --network arbitrumSepolia",
    "verify:base": "hardhat run scripts/verify.ts --network baseSepolia",
    "node": "hardhat node",
    "console": "hardhat console"
  },
  "keywords": [
    "ethereum",
    "hardhat",
    "smart-contracts",
    "solidity",
    "blockchain",
    "booking",
    "auction",
    "pyusd"
  ],
  "author": "Digital House Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.0",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=18.0.0",
    "chai": "^4.2.0",
    "ethers": "^6.4.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.8",
    "solidity-coverage": "^0.8.0",
    "ts-node": ">=8.0.0",
    "typechain": "^8.3.0",
    "typescript": ">=4.5.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "dotenv": "^16.3.0"
  }
