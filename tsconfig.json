{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "typeRoots": ["./node_modules/@types", "./typechain-types"]
  },
  "include": [
    "./scripts",
    "./test",
    "./ignition",
    "./typechain-types"
  ],
  "exclude": [
    "node_modules",
    "artifacts",
    "cache",
    "dist"
  ],
  "files": [
    "./hardhat.config.ts"
  ]
}
